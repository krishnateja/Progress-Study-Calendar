<apex:page standardController="fw1__Payment__c" extensions="fw1.PaymentActionsController" showHeader="false" sidebar="false">
    <apex:sectionHeader title="Void Payment" />

    <script>
        function closeAndRefreshParent() {
            parent.window.close();
            parent.window.opener.location.href = "/{!$Request.id}";    
        }
    </script>


    <apex:form >
        <apex:pageBlock >
            
            <apex:pageBlockSection columns="1">
                <apex:outputText >Enter a note below (optional). Click Void to continue.</apex:outputText>
                <apex:pageBlockSectionItem >
                    <apex:outputLabel >Note</apex:outputLabel>
                    <apex:inputTextarea value="{!voidNote}"/>
                </apex:pageBlockSectionItem>
            </apex:pageBlockSection>
            
            <apex:pageBlockButtons location="bottom">
                <apex:commandButton value="Cancel" onclick="top.window.close();" rendered="{!showCloseWindowButton == false}"/>
                <apex:commandButton value="Void" action="{!voidPayment}" rendered="{!showCloseWindowButton == false}"/>
                <apex:commandButton value="Close Window" onclick="closeAndRefreshParent();" rendered="{!showCloseWindowButton == true}"/>
            </apex:pageBlockButtons>
            
            <apex:pageMessages />
            <br/>
            <br/>
        </apex:pageBlock>
    </apex:form>
</apex:page>